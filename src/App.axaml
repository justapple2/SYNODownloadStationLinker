<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SYNODownloadStationLinker.App"
             xmlns:local="using:SYNODownloadStationLinker"
             xmlns:vm="clr-namespace:SYNODownloadStationLinker.ViewModels"
             x:DataType="vm:AppViewModel"
             x:CompileBindings="True"
             RequestedThemeVariant="Default">

    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>

    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon Icon="/Assets/SYNODSTool.ico" ToolTipText="SYNODSLinker" Command="{Binding ShowCommand}">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem Header="Exit" Command="{Binding ExitCommand}" />
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>

    </TrayIcon.Icons>

</Application>